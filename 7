#include <stdio.h>
#include <cstdlib> // Required for abs()

void update(int *a, int *b) {
    // Store original values by dereferencing the pointers
    int val_a = *a;
    int val_b = *b;
    
    // Update the value at address 'a' with the sum
    *a = val_a + val_b;
    
    // Update the value at address 'b' with the absolute difference
    // abs(x) returns the positive magnitude of x
    *b = std::abs(val_a - val_b);
}

int main() {
    int a, b;
    int *pa = &a, *pb = &b;
    
    // Read input
    if (scanf("%d %d", &a, &b) == 2) {
        // Pass the addresses of a and b to the function
        update(pa, pb);
        // Print the modified values
        printf("%d\n%d", a, b);
    }

    return 0;
}
